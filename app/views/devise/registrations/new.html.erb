<div class="signing-bg">
    <div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12"> 
      <div class="panel panel-default login-panel">  
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%- if resource.errors.any? %>
      <div class= "alert alert-dismissable alert-danger">
        <%- resource.errors.full_messages.each do |msg| %>
          <p><%=msg%></p>
        <% end %>
      </div>
    <% end %>

    <div class="form-inputs">
      <%= f.label :email, required: true %><br>
      <%= f.email_field :email, required: true, autofocus: true%><br>
      <%= f.label :password %><br>
      <%= f.password_field :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable) %><br>
      <%= f.label :password_confirmation %><br>
      <%= f.password_field :password_confirmation, required: true %><br>
    </div>

    <div class="form-actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
    </div>  
  </div>
</div>
