

<div class="container">  
  <div class="col-lg-4">
    <h1> New Post</h1>  

    <%= form_for @post do |form| %>  
      <%= form.text_field :title, :placeholder => "Insert title"  %>  
      <%= form.text_field :body, :placeholder => "Describe your item" %>
      <%= form.file_field :image, as: :attachinary %>
      <%= form.button :submit %>  
    <% end %>  
  </div>
</div>