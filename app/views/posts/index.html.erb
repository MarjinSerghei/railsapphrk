<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">Ieri eu tu azi</a>
    </div>
 
    <div class="navbar-collapse">
      <ul class="nav navbar-nav">
        <li>
          <%= link_to("New post", new_post_path) %>
        </li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li>
          <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
        </li>
      </ul>
    </div>
  </div>
</nav>
 
<div class="container">  
  <ul>
    <% Post.all.each do |post| %>
<div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
  <div class="panel panel-default">
    <div class="panel-body">
    <div class="panel-heading">  
  <h5><%= post.title %></h5>
</div>  
<%= cl_image_tag(post.image.path, width: 500, class: "img-responsive") %>
<p>  
  <%= post.body %>
</p>  
    </div>
    <div class="panel-footer">
      <span class="label label-default">
        <%= "Posted by " + post.user.email %>
      </span>
 
        <% if current_user == post.user %>  
          <%= link_to(post_path(post), method: :delete, class: 'btn btn-danger btn-xs pull-right') do %>
            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete
          <% end %>
        <% end %>
 
        <%= link_to(edit_post_path(post), class: 'btn btn-default btn-xs pull-right') do %>
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
        <% end %>
    </div>
  </div>
</div>
    <% end %>
  </ul>
</div>
